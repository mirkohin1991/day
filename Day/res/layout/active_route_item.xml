<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@color/lightgreen"
    
    android:orientation="horizontal" >
    <!--
    Setting the background to lightgreen. If it is a element of the list later on it is overwritten and changed
    to white
    -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textRouteNameActive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keine neue Route"
            android:textColor="@color/white"
            android:textSize="20dp" />

       <TextView
            android:id="@+id/textRouteDateActive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="...ist aktiv"
            android:textColor="@color/white"
            android:textSize="18sp" />
           

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal" >
            
          
             
            
             <Button
                android:id="@+id/imagebuttonContinue"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/icon_play"
                android:clickable="true"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:textColor="@color/white"
                android:textSize="@dimen/h1" />
           <!--   
                     <Button
                android:id="@+id/imagebuttonStop"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/icon_pause"
                android:clickable="true"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:textColor="@color/white"
                android:textSize="@dimen/h1" /> -->
                     
                    
            
            
        </LinearLayout>
        
        
    </LinearLayout>

</LinearLayout>
