<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/settings_background"
    android:orientation="vertical"
    android:showDividers="beginning|middle|end" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="GPS"
            android:textColor="@color/settings_text"
            android:textSize="20sp" />

        <Switch
            android:id="@+id/switchGPSOnOff"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:thumb="@drawable/switch_control"
            android:track="@drawable/switch_progress" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/refresh_match_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible" >

        <TextView android:layout_width="wrap_content" android:layout_height="0dp" android:layout_weight="1" android:padding="10dp" android:text="GPS Wiederholungsrate" android:textColor="@color/settings_text" android:textSize="20sp" /><SeekBar
            android:id="@+id/seekBarFrequency"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:max="99"
            android:progressDrawable="@drawable/green_scrubber_progress"
            android:thumb="@drawable/green_scrubber_control" />

        <TextView
            android:id="@+id/actSec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:paddingBottom="20dp"
            android:textColor="@color/settings_text"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="3dip"
            android:src="@drawable/menu_divider" />

        

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:paddingTop="20dp"
            android:text="Minimale Entfernung in Metern"
            android:textColor="@color/settings_text"
            android:textSize="20sp" />

        <SeekBar
            android:id="@+id/SeekBarFrequencyMeter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:layout_weight="10"
            android:max="95"
            android:progressDrawable="@drawable/green_scrubber_progress"
            android:thumb="@drawable/green_scrubber_control" />

        <TextView
            android:id="@+id/actMeter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:textColor="@color/settings_text"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>